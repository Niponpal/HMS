@model MedicalRecord

<h2 class="mb-4">Create Medical Record</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="row g-3">

        <div class="col-md-6">
            <label asp-for="RecordDate" class="form-label"></label>
            <input asp-for="RecordDate" class="form-control" type="date" />
            <span asp-validation-for="RecordDate" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Symptoms" class="form-label"></label>
            <input asp-for="Symptoms" class="form-control" />
            <span asp-validation-for="Symptoms" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Diagnosis" class="form-label"></label>
            <input asp-for="Diagnosis" class="form-control" />
            <span asp-validation-for="Diagnosis" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Prescription" class="form-label"></label>
            <input asp-for="Prescription" class="form-control" />
            <span asp-validation-for="Prescription" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Notes" class="form-label"></label>
            <input asp-for="Notes" class="form-control" />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="TestResults" class="form-label"></label>
            <input asp-for="TestResults" class="form-control" />
            <span asp-validation-for="TestResults" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="NextVisitSuggestion" class="form-label"></label>
            <input asp-for="NextVisitSuggestion" class="form-control" />
            <span asp-validation-for="NextVisitSuggestion" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="CreatedAt" class="form-label"></label>
            <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
            <span asp-validation-for="CreatedAt" class="text-danger"></span>
        </div>

        <!-- File Upload -->
        <div class="col-md-6">
            <label for="featuredImageUpload" class="form-label">Upload Image</label>
            <input class="form-control" type="file" id="featuredImageUpload" name="ImageFile" />
        </div>

        <!-- ImagePath Field for Uploaded URL -->
        <div class="col-md-6">
            <label asp-for="ImagePath" class="form-label"></label>
            <input asp-for="ImagePath" class="form-control" id="ImagePath" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="col-md-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-12 text-end">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        const featureUploadElement = document.getElementById("featuredImageUpload");
        const imagePathElement = document.getElementById("ImagePath");

        async function featureImageUpload(e) {
            const file = e.target.files[0];
            if (!file) return;

            const formData = new FormData();
            formData.append("file", file);

            try {
                const response = await fetch("/api/images", {
                    method: "POST",
                    headers: {
                        "Accept": "*/*"
                    },
                    body: formData
                });

                const result = await response.json();
                if (result.link) {
                    imagePathElement.value = result.link;
                } else {
                    alert("Image upload failed. No link returned.");
                }
            } catch (err) {
                console.error("Upload error:", err);
                alert("Image upload failed. Please try again.");
            }
        }

        featureUploadElement.addEventListener("change", featureImageUpload);
    </script>
}
