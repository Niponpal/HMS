@model List<MedicalRecord>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Medical Record</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Data</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Record Date</th>
            <th>Symptoms</th>
            <th>Diagnosis</th>
            <th>Prescription</th>
            <th>Notes</th>
            <th>Test Results</th>
            <th>Next Visit Suggestion</th>
            <th>Created At</th>
            <th>Image Path</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.RecordDate.ToShortDateString()</td>
                <td>@item.Symptoms</td>
                <td>@item.Diagnosis</td>
                <td>@item.Prescription</td>
                <td>@item.Notes</td>
                <td>@item.TestResults</td>
                <td>@item.NextVisitSuggestion</td>
                <td>@item.CreatedAt.ToString("g")</td>
                <td>@item.ImagePath</td>
                <td>@item.Description</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details</a>
                        <form method="post" asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
