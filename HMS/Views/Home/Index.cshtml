@{
    ViewData["Title"] = "Home Page";
}



<!-- Hero Section - Full Width Without Container -->
<div id="heroCarousel" class="carousel slide mt-4" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=1200&q=80" class="d-block w-100" alt="Smart Shopping Banner" style="max-height: 600px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold">Welcome to Smart Shopping</h1>
                <p class="lead">Discover the latest in smart gadgets and electronics.</p>
                <a class="btn btn-primary btn-lg" href="/Products">Shop Now</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?auto=format&fit=crop&w=1200&q=80" class="d-block w-100" alt="Exclusive Discounts Banner" style="max-height: 600px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold">Exclusive Discounts</h1>
                <p class="lead">Grab the best deals on your favorite tech.</p>
                <a class="btn btn-success btn-lg" href="/Offers">View Offers</a>
            </div>
        </div>
    </div>
    <!-- Carousel Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<!-- Features Section -->
<section class=" my-5 mt-5">
    <h2 class="text-center mb-5 fw-bold">Our Key Features</h2>
    <div class="row text-center g-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 h-100 text-center">
                <div class="mb-3 display-6">👨‍⚕️</div>
                <h5 class="fw-bold mb-2">Doctors</h5>
                <p class="text-muted">Manage doctors, their schedules, and specializations.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 h-100 text-center">
                <div class="mb-3 display-6">🧑‍🤝‍🧑</div>
                <h5 class="fw-bold mb-2">Patients</h5>
                <p class="text-muted">Easy patient registration and medical records tracking.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 h-100 text-center">
                <div class="mb-3 display-6">🛏️</div>
                <h5 class="fw-bold mb-2">Admissions</h5>
                <p class="text-muted">Room allocation and patient admission management.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 h-100 text-center">
                <div class="mb-3 display-6">💊</div>
                <h5 class="fw-bold mb-2">Medicines</h5>
                <p class="text-muted">Pharmacy and medicine stock management system.</p>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-3">
                <h2 class="text-primary fw-bold">150+</h2>
                <p class="text-muted">Doctors</p>
            </div>
            <div class="col-md-3">
                <h2 class="text-primary fw-bold">5,000+</h2>
                <p class="text-muted">Patients</p>
            </div>
            <div class="col-md-3">
                <h2 class="text-primary fw-bold">100+</h2>
                <p class="text-muted">Hospital Rooms</p>
            </div>
            <div class="col-md-3">
                <h2 class="text-primary fw-bold">10+</h2>
                <p class="text-muted">Years of Service</p>
            </div>
        </div>
    </div>
</section>

<!-- Doctors Section -->
<section class="container my-5">
    <h2 class="text-center mb-4 fw-bold">Our Doctors</h2>
    <div class="row g-4">
        @foreach (var doctor in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card shadow-lg border-0 rounded-4 h-100">
                    <img src="@doctor.ImagePath" class="card-img-top rounded-top-4" alt="@doctor.FullName" style="height:250px; object-fit:cover;">
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-primary">@doctor.FullName</h5>
                        <p class="text-muted mb-1"><i class="bi bi-hospital"></i> @doctor.Specialization</p>
                        <p class="mb-1"><i class="bi bi-mortarboard"></i> @doctor.Qualification</p>
                        <p class="mb-1"><i class="bi bi-briefcase"></i> @doctor.ExperienceYears years experience</p>
                        <p class="mb-1">
                            <i class="bi bi-person"></i> @doctor.Gender |
                            <i class="bi bi-calendar-check"></i> Joined @doctor.JoiningDate.ToShortDateString()
                        </p>
                        <span class="badge @(doctor.Status == "Active" ? "bg-success" : "bg-danger")">@doctor.Status</span>
                        <p class="mt-3 text-secondary">@doctor.Description</p>
                    </div>
                    <div class="card-footer bg-light d-flex justify-content-between">
                        <a href="tel:@doctor.PhoneNumber" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-telephone"></i> Call
                        </a>
                        <a href="mailto:@doctor.Email" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-envelope"></i> Email
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Call to Action -->
<section class="text-center my-5 py-5 bg-primary text-white rounded-4">
    <div class="container">
        <h2 class="fw-bold mb-3">Ready to Experience Smarter Healthcare?</h2>
        <p class="lead mb-4">Join our system and manage hospital operations with ease.</p>
        <a href="/Account/Login" class="btn btn-light btn-lg shadow-sm">Get Started</a>
    </div>
</section>
