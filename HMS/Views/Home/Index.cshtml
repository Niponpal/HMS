@{
    ViewData["Title"] = "Home Page";
}



<!-- Hero Section -->
<div class="container-fluid bg-primary text-white text-center py-5">
    <h1 class="display-4 fw-bold">🏥 Welcome to SmartCare Hospital</h1>
    <p class="lead">Efficient, Reliable, and Patient-Centered Hospital Management System</p>
    <a href="/Appointments/Create" class="btn btn-light btn-lg mt-3">Book an Appointment</a>
</div>

<!-- Features Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Our Key Features</h2>
    <div class="row text-center">
        <div class="col-md-3">
            <div class="card shadow-sm p-4">
                <h4>👨‍⚕️ Doctors</h4>
                <p>Manage doctors, their schedules, and specializations.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm p-4">
                <h4>🧑‍🤝‍🧑 Patients</h4>
                <p>Easy patient registration and medical records tracking.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm p-4">
                <h4>🛏️ Admissions</h4>
                <p>Room allocation and patient admission management.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm p-4">
                <h4>💊 Medicines</h4>
                <p>Pharmacy and medicine stock management system.</p>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="container-fluid bg-light py-5">
    <div class="row text-center">
        <div class="col-md-3">
            <h2 class="text-primary">150+</h2>
            <p>Doctors</p>
        </div>
        <div class="col-md-3">
            <h2 class="text-primary">5,000+</h2>
            <p>Patients</p>
        </div>
        <div class="col-md-3">
            <h2 class="text-primary">100+</h2>
            <p>Hospital Rooms</p>
        </div>
        <div class="col-md-3">
            <h2 class="text-primary">10+</h2>
            <p>Years of Service</p>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="container text-center my-5">
    <h2>Ready to Experience Smarter Healthcare?</h2>
    <p class="lead">Join our system and manage hospital operations with ease.</p>
    <a href="/Account/Login" class="btn btn-primary btn-lg">Get Started</a>
</div>

