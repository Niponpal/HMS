@model Doctor


<h2 class="mb-4">Doctor Details</h2>

<div class="card shadow p-4">
    <div class="row">
        <div class="col-md-4 text-center mb-4">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" class="img-thumbnail rounded shadow-sm" alt="Doctor Photo" style="max-height: 250px;" />
            }
            else
            {
                <img src="~/images/default-doctor.png" class="img-thumbnail rounded shadow-sm" alt="Default Doctor" style="max-height: 250px;" />
            }
        </div>

        <div class="col-md-8">
            <div class="mb-3">
                <strong>Full Name:</strong> @Model.FullName
            </div>

            <div class="mb-3">
                <strong>Specialization:</strong> @Model.Specialization
            </div>

            <div class="mb-3">
                <strong>Phone Number:</strong> @Model.PhoneNumber
            </div>

            <div class="mb-3">
                <strong>Email:</strong> @Model.Email
            </div>

            <div class="mb-3">
                <strong>Qualification:</strong> @Model.Qualification
            </div>

            <div class="mb-3">
                <strong>Experience (Years):</strong> @Model.ExperienceYears
            </div>

            <div class="mb-3">
                <strong>Gender:</strong> @Model.Gender
            </div>

            <div class="mb-3">
                <strong>Joining Date:</strong> @Model.JoiningDate.ToString("yyyy-MM-dd hh:mm tt")
            </div>

            <div class="mb-3">
                <strong>Status:</strong> @Model.Status
            </div>

            <div class="mb-3">
                <strong>Profile Summary:</strong><br />
                @Model.Description
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
