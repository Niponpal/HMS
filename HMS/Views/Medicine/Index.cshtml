@model List<Medicine>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Medicine Information</h2>
        <a asp-action="Create" class="btn btn-success">+ Add Medicine</a>
    </div>

    <table class="table table-bordered table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>MedicineName</th>
                <th>Manufacturer</th>
                <th>BatchNumber</th>
                <th>ExpiryDate</th>
                <th>StockQuantity</th>
                <th>PricePerUnit</th>
                <th>UsageInstructions</th>
                <th>AddedDate</th>
                <th>Category</th>
                <th>ImagePath</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.MedicineName</td>
                        <td>@item.Manufacturer</td>
                        <td>@item.BatchNumber</td>
                        <td>@item.ExpiryDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.StockQuantity</td>
                        <td>@item.PricePerUnit.ToString("C")</td>
                        <td>@item.UsageInstructions</td>
                        <td>@item.AddedDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.Category</td>
                        <td>
                            <img src="@Url.Content(item.ImagePath ?? "~/images/noimage.png")" width="60" height="60" class="rounded border" />
                        </td>
                        <td>@item.Description</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure to delete this item?');" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="13" class="text-center text-muted">No medicines available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
