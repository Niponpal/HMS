@model List<HospitalRoom>

<h2>Hospital Room</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>RoomNumber</th>
            <th>RoomType</th>
            <th>IsAvailable</th>
            <th>RoomChargesPerDay</th>
            <th>Floor</th>
            <th>Capacity</th>
            <th>OccupiedBeds</th>
            <th>Description</th>
            <th>LastUpdated</th>
            <th>ImagePath</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.RoomNumber</td>
                <td>@item.RoomType</td>
                <td>@item.IsAvailable</td>
                <td>@item.RoomChargesPerDay</td>
                <td>@item.Floor</td>
                <td>@item.Capacity</td>
                <td>@item.OccupiedBeds</td>
                <td>@item.Description</td>
                <td>@item.LastUpdated</td>
                <td>@item.ImagePath</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a>
                    <form method="post" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this room?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
   
</table>