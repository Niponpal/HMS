@model HMS.Models.Patient

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Patient Details</h4>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-4 text-center">

                    <div class="text-center">
                        @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
                        {
                            <img src="@Model.ImagePath"
                                 alt="@Model.FullName"
                                 class="rounded shadow-sm"
                                 width="300" height="400"
                                 style="object-fit: cover;" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </div>

                </div>
                <div class="col-md-8">
                    <table class="table table-sm table-bordered">
                        <tbody>
                            <tr>
                                <th>Full Name</th>
                                <td>@Model.FullName</td>
                            </tr>
                            <tr>
                                <th>Gender</th>
                                <td>@Model.Gender</td>
                            </tr>
                            <tr>
                                <th>Date of Birth</th>
                                <td>@Model.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            </tr>
                            <tr>
                                <th>Blood Group</th>
                                <td>@Model.BloodGroup</td>
                            </tr>
                            <tr>
                                <th>Phone</th>
                                <td>@Model.PhoneNumber</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Address</th>
                                <td>@Model.Address</td>
                            </tr>
                            <tr>
                                <th>Registration Date</th>
                                <td>@Model.RegistrationDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                            <tr>
                                <th>Emergency Contact</th>
                                <td>@Model.EmergencyContact</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>@Model.Description</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
