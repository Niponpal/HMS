@model Admission

<h2 class="mb-4">New Admission Form</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="AdmitDate" class="form-label"></label>
            <input asp-for="AdmitDate" class="form-control" type="date" />
            <span asp-validation-for="AdmitDate" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="DischargeDate" class="form-label"></label>
            <input asp-for="DischargeDate" class="form-control" type="date" />
            <span asp-validation-for="DischargeDate" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Diagnosis" class="form-label"></label>
            <input asp-for="Diagnosis" class="form-control" />
            <span asp-validation-for="Diagnosis" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="TreatmentPlan" class="form-label"></label>
            <input asp-for="TreatmentPlan" class="form-control" />
            <span asp-validation-for="TreatmentPlan" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="AdvancePayment" class="form-label"></label>
            <input asp-for="AdvancePayment" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="AdvancePayment" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="DischargeStatus" class="form-label"></label>
            <input asp-for="DischargeStatus" class="form-control" />
            <span asp-validation-for="DischargeStatus" class="text-danger"></span>
        </div>


        <div class="col-md-6 mb-3">
            <label class="form-label">Upload Report </label>
            <input class="form-control" type="file" name="file" id="featuredImageUpload" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="ImagePath" class="form-label">Upload Report (PDF or Image)</label>
            <input asp-for="ImagePath" class="form-control" type="text"  />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>


        <div class="col-md-6 mb-3">
            <label asp-for="DoctorRemarks" class="form-label"></label>
            <textarea asp-for="DoctorRemarks" class="form-control" rows="3"></textarea>
            <span asp-validation-for="DoctorRemarks" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="CreatedAt" value="@DateTime.Now" />

        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">Submit Admission</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>
</form>


@section Scripts {
    <script>
        let featureUploadElement = document.getElementById("featuredImageUpload");
        let FeaturedImageUrlElement = document.getElementById("ImagePath");

        async function featureImageUpload(e) {
          let file = e.target.files[0];
          if (!file) return;

          let data = new FormData();
          data.append("file", file);

          fetch("/api/images", {
            method: "POST",
            headers: {
              "Accept": "*/*"
            },
            body: data
          })
          .then(res => res.json())
          .then(result => {
            console.log(result);
            FeaturedImageUrlElement.value = result.link;  // Correct usage here
          })
          .catch(err => {
            console.error("Upload error:", err);
            alert("Image upload failed. Please try again.");
          });
        }

        featureUploadElement.addEventListener("change", featureImageUpload);
    </script>
}
