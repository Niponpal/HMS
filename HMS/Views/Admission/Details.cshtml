@model Admission


<h2 class="mb-4">Admission Details</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-4 fw-bold">Admit Date:</div>
            <div class="col-md-8">@Model.AdmitDate.ToString("dd MMM yyyy")</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold">Discharge Date:</div>
            <div class="col-md-8">@Model.DischargeDate?.ToString("dd MMM yyyy") ?? "N/A"</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold">Diagnosis:</div>
            <div class="col-md-8">@Model.Diagnosis</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold">Treatment Plan:</div>
            <div class="col-md-8">@Model.TreatmentPlan</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold">Advance Payment:</div>
            <div class="col-md-8">@Model.AdvancePayment.ToString("C")</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold">Discharge Status:</div>
            <div class="col-md-8">@Model.DischargeStatus</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold">Doctor Remarks:</div>
            <div class="col-md-8">@Model.DoctorRemarks</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold">Created At:</div>
            <div class="col-md-8">@Model.CreatedAt.ToString("g")</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold">Test Report:</div>
            <div class="col-md-8">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <a href="@Url.Content(Model.ImagePath)" target="_blank">View Report</a>
                }
                else
                {
                    <span class="text-muted">No file uploaded</span>
                }
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold">Description:</div>
            <div class="col-md-8">@Model.Description</div>
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>
</div>