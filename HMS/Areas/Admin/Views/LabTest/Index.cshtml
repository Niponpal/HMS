@model List<LabTest>


<div class="card">
    <div class="card-header">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Lab Test
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Test Name</th>
                    <th>Test Date</th>
                    <th>Test Result</th>
                    <th>Status</th>
                    <th>Test Fee</th>
                    <th>Notes</th>
                    <th>Created At</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var test in Model)
                {
                    <tr>
                        <td>@test.Id</td>
                        <td>@test.TestName</td>
                        <td>@test.TestDate.ToString("yyyy-MM-dd")</td>
                        <td>@test.TestResult</td>
                        <td>@test.Status</td>
                        <td>@test.TestFee.ToString("C")</td>
                        <td>@test.Notes</td>
                        <td>@test.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>
                            <img src="@Url.Content(test.ImagePath ?? "~/images/noimage.png")"
                                 alt="Report Image"
                                 class="img-thumbnail"
                                 style="max-height: 60px;" />
                        </td>
                        <td>@test.Description</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-info me-1">View</a>
                            <a asp-action="Edit" asp-route-id="@test.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                            <form asp-action="Delete" asp-route-id="@test.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure to delete this test?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Rendering engine</th>
                    <th>Browser</th>
                    <th>Platform(s)</th>
                    <th>Engine version</th>
                    <th>CSS grade</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>



@section Scripts {
    <script>
        $(function () {
          $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
          }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
          $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
          });
        });
    </script>
}



