@model LabTest

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-info text-white text-center py-3">
            <h3 class="mb-0">🔬 Lab Test Details</h3>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">

                <!-- Test Name & Date -->
                <div class="col-md-6">
                    <h6 class="text-muted">🧪 Test Name</h6>
                    <p class="fw-semibold">@Model.TestName</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">📅 Test Date</h6>
                    <p class="fw-semibold">@Model.TestDate.ToString("yyyy-MM-dd")</p>
                </div>

                <!-- Test Result & Status -->
                <div class="col-md-6">
                    <h6 class="text-muted">📊 Test Result</h6>
                    <p>@Model.TestResult</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">📌 Status</h6>
                    <p>@Model.Status</p>
                </div>

                <!-- Fee & Created At -->
                <div class="col-md-6">
                    <h6 class="text-muted">💰 Test Fee</h6>
                    <p>৳@Model.TestFee.ToString("F2")</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">⏰ Created At</h6>
                    <p>@Model.CreatedAt.ToString("yyyy-MM-dd")</p>
                </div>

                <!-- Notes -->
                <div class="col-md-12">
                    <h6 class="text-muted">📝 Notes</h6>
                    <p>@Model.Notes</p>
                </div>

                <!-- Description -->
                <div class="col-md-12">
                    <h6 class="text-muted">📖 Description / Summary</h6>
                    <p>@Model.Description</p>
                </div>

                <!-- Report Image -->
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="col-md-12">
                        <h6 class="text-muted">🖼️ Report Image</h6>
                        <img src="@Model.ImagePath" alt="Report Image" class="img-fluid rounded shadow-sm mt-2" style="max-height: 300px;" />
                    </div>
                }
            </div>

            <!-- Action Buttons -->
            <div class="text-end mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 shadow-sm">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2 shadow-sm">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
