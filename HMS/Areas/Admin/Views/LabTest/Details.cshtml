@model LabTest


<div class="container mt-4 mx-4">
    <h2 class="mb-4">Lab Test Details</h2>

    <div class="card shadow p-4">
        <div class="row g-3">
            <div class="col-md-6">
                <strong>Test Name:</strong>
                <p>@Model.TestName</p>
            </div>

            <div class="col-md-6">
                <strong>Test Date:</strong>
                <p>@Model.TestDate.ToString("yyyy-MM-dd")</p>
            </div>

            <div class="col-md-6">
                <strong>Test Result:</strong>
                <p>@Model.TestResult</p>
            </div>

            <div class="col-md-6">
                <strong>Status:</strong>
                <p>@Model.Status</p>
            </div>

            <div class="col-md-6">
                <strong>Test Fee:</strong>
                <p>৳@Model.TestFee.ToString("F2")</p>
            </div>

            <div class="col-md-6">
                <strong>Created At:</strong>
                <p>@Model.CreatedAt.ToString("yyyy-MM-dd")</p>
            </div>

            <div class="col-md-12">
                <strong>Notes:</strong>
                <p>@Model.Notes</p>
            </div>

            <div class="col-md-12">
                <strong>Description / Summary:</strong>
                <p>@Model.Description</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="col-md-12">
                    <strong>Report Image:</strong><br />
                    <img src="@Model.ImagePath" alt="Report Image" class="img-fluid rounded border mt-2" style="max-height: 300px;" />
                </div>
            }
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
