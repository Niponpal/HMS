@model LabTest

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white text-center py-3">
            <h3 class="mb-0">🧪 Add New Lab Test</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="row g-4">

                    <!-- Test Name -->
                    <div class="col-md-6">
                        <label asp-for="TestName" class="form-label fw-semibold">Test Name</label>
                        <input asp-for="TestName" class="form-control shadow-sm" placeholder="Enter test name" />
                        <span asp-validation-for="TestName" class="text-danger small"></span>
                    </div>

                    <!-- Test Date -->
                    <div class="col-md-6">
                        <label asp-for="TestDate" class="form-label fw-semibold">Test Date</label>
                        <input asp-for="TestDate" type="date" class="form-control shadow-sm" />
                        <span asp-validation-for="TestDate" class="text-danger small"></span>
                    </div>

                    <!-- Test Result -->
                    <div class="col-md-6">
                        <label asp-for="TestResult" class="form-label fw-semibold">Test Result</label>
                        <input asp-for="TestResult" class="form-control shadow-sm" placeholder="Enter result" />
                        <span asp-validation-for="TestResult" class="text-danger small"></span>
                    </div>

                    <!-- Patient Select -->
                    <div class="col-md-6 mt-4">
                        <label asp-for="PatientId" class="form-label fw-semibold">Select Patient</label>
                        <select asp-for="PatientId" class="form-select shadow-sm" asp-items="@(ViewBag.PatientId)">
                            <option value="">-- Select Patient Test Name --</option>
                        </select>
                        <span asp-validation-for="PatientId" class="text-danger small"></span>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label fw-semibold">Status</label>
                        <input asp-for="Status" class="form-control shadow-sm" placeholder="Pending / Completed" />
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <!-- Test Fee -->
                    <div class="col-md-6">
                        <label asp-for="TestFee" class="form-label fw-semibold">Test Fee</label>
                        <input asp-for="TestFee" class="form-control shadow-sm" placeholder="Enter fee amount" />
                        <span asp-validation-for="TestFee" class="text-danger small"></span>
                    </div>

                    <!-- Created At -->
                    <div class="col-md-6">
                        <label asp-for="CreatedAt" class="form-label fw-semibold">Created At</label>
                        <input asp-for="CreatedAt" type="date" class="form-control shadow-sm" />
                        <span asp-validation-for="CreatedAt" class="text-danger small"></span>
                    </div>

                    <!-- Notes -->
                    <div class="col-md-12">
                        <label asp-for="Notes" class="form-label fw-semibold">Notes</label>
                        <textarea asp-for="Notes" class="form-control shadow-sm" rows="3" placeholder="Additional notes..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>

                    <!-- File Upload -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Upload Report Image</label>
                        <input type="file" id="featuredImageUpload" class="form-control shadow-sm" accept=".jpg,.png,.pdf" />
                        <div class="mt-2">
                            <img id="reportImagePreview" src="" alt="Report Preview" class="img-thumbnail d-none" style="max-height: 150px;" />
                        </div>
                    </div>

                    <!-- Image Path -->
                    <div class="col-md-6">
                        <label asp-for="ImagePath" class="form-label fw-semibold">Image Path</label>
                        <input asp-for="ImagePath" class="form-control shadow-sm" readonly />
                        <span asp-validation-for="ImagePath" class="text-danger small"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label fw-semibold">Description / Summary</label>
                        <textarea asp-for="Description" class="form-control shadow-sm" rows="4" id="content" placeholder="Enter description or summary..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 shadow-sm me-2">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Froala Editor
        let editor = new FroalaEditor("#content");

        // File Upload Handling
        let featureUploadElement = document.getElementById("featuredImageUpload");
        let FeaturedImageUrlElement = document.getElementById("ImagePath");
        let previewImg = document.getElementById("reportImagePreview");

        async function featureImageUpload(e) {
            let file = e.target.files[0];
            if (!file) return;

            let data = new FormData();
            data.append("file", file);

            fetch("/api/images", {
                method: "POST",
                headers: { "Accept": "*/*" },
                body: data
            })
            .then(res => res.json())
            .then(result => {
                FeaturedImageUrlElement.value = result.link;
                previewImg.src = result.link;
                previewImg.classList.remove("d-none");
            })
            .catch(err => {
                console.error("Upload error:", err);
                alert("Image upload failed. Please try again.");
            });
        }

        featureUploadElement.addEventListener("change", featureImageUpload);
    </script>
}
