@model List<HospitalRoom>


<div class="card">
    <div class="card-header">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Hospital Room
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>RoomNumber</th>
                    <th>RoomType</th>
                    <th>IsAvailable</th>
                    <th>RoomChargesPerDay</th>
                    <th>Floor</th>
                    <th>Capacity</th>
                    <th>OccupiedBeds</th>
                    <th>Description</th>
                    <th>LastUpdated</th>
                    <th>ImagePath</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.RoomNumber</td>
                        <td>@item.RoomType</td>
                        <td>@item.IsAvailable</td>
                        <td>@item.RoomChargesPerDay</td>
                        <td>@item.Floor</td>
                        <td>@item.Capacity</td>
                        <td>@item.OccupiedBeds</td>
                        <td>@item.Description</td>
                        <td>@item.LastUpdated</td>
                        <td>@item.ImagePath</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a>
                            <form method="post" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this room?');">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>

                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Rendering engine</th>
                    <th>Browser</th>
                    <th>Platform(s)</th>
                    <th>Engine version</th>
                    <th>CSS grade</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>



@section Scripts {
    <script>
        $(function () {
          $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
          }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
          $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
          });
        });
    </script>
}


