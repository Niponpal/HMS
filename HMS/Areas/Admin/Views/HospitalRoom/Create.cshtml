@model HospitalRoom

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">🏥 Add Hospital Room</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="row g-4">

                    <!-- Room Number -->
                    <div class="col-md-6">
                        <label asp-for="RoomNumber" class="form-label fw-semibold"></label>
                        <input asp-for="RoomNumber" class="form-control shadow-sm" placeholder="Enter room number" />
                        <span asp-validation-for="RoomNumber" class="text-danger small"></span>
                    </div>

                    <!-- Room Type -->
                    <div class="col-md-6">
                        <label asp-for="RoomType" class="form-label fw-semibold"></label>
                        <input asp-for="RoomType" class="form-control shadow-sm" placeholder="e.g. ICU, General, VIP" />
                        <span asp-validation-for="RoomType" class="text-danger small"></span>
                    </div>

                    <!-- Availability -->
                    <div class="col-md-6 mt-5">
                        <label asp-for="IsAvailable" class="form-label fw-semibold"></label>
                        <select asp-for="IsAvailable" class="form-select shadow-sm">
                            <option value="">-- Select Availability --</option>
                            <option value="true">Available</option>
                            <option value="false">Not Available</option>
                        </select>
                        <span asp-validation-for="IsAvailable" class="text-danger small"></span>
                    </div>

                    <!-- Charges Per Day -->
                    <div class="col-md-6">
                        <label asp-for="RoomChargesPerDay" class="form-label fw-semibold">Charges Per Day</label>
                        <input asp-for="RoomChargesPerDay" class="form-control shadow-sm" placeholder="Enter daily charges" />
                        <span asp-validation-for="RoomChargesPerDay" class="text-danger small"></span>
                    </div>

                    <!-- Floor -->
                    <div class="col-md-6">
                        <label asp-for="Floor" class="form-label fw-semibold"></label>
                        <input asp-for="Floor" class="form-control shadow-sm" placeholder="Enter floor number" />
                        <span asp-validation-for="Floor" class="text-danger small"></span>
                    </div>

                    <!-- Capacity -->
                    <div class="col-md-6">
                        <label asp-for="Capacity" class="form-label fw-semibold"></label>
                        <input asp-for="Capacity" type="number" min="0" class="form-control shadow-sm" placeholder="Total beds in room" />
                        <span asp-validation-for="Capacity" class="text-danger small"></span>
                    </div>

                    <!-- Occupied Beds -->
                    <div class="col-md-6">
                        <label asp-for="OccupiedBeds" class="form-label fw-semibold">Occupied Beds</label>
                        <input asp-for="OccupiedBeds" type="number" min="0" class="form-control shadow-sm" placeholder="Currently occupied beds" />
                        <span asp-validation-for="OccupiedBeds" class="text-danger small"></span>
                    </div>

                    <!-- Last Updated -->
                    <div class="col-md-6">
                        <label asp-for="LastUpdated" class="form-label fw-semibold"></label>
                        <input asp-for="LastUpdated" type="datetime-local" class="form-control shadow-sm" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="LastUpdated" class="text-danger small"></span>
                    </div>

                    <!-- Image Path -->
                    <div class="col-md-6">
                        <label asp-for="ImagePath" class="form-label fw-semibold"></label>
                        <input asp-for="ImagePath" class="form-control shadow-sm" readonly />
                        <span asp-validation-for="ImagePath" class="text-danger small"></span>
                    </div>

                    <!-- File Upload -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Upload Room Image</label>
                        <input type="file" class="form-control shadow-sm" id="featuredImageUpload" />
                        <div class="mt-2">
                            <img id="roomImagePreview" src="" alt="Room Preview" class="img-thumbnail d-none" style="max-height: 150px;" />
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label fw-semibold">Room Description</label>
                        <textarea asp-for="Description" class="form-control shadow-sm" rows="4" id="content" placeholder="Describe the room facilities..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 me-2 shadow-sm">
                        <i class="bi bi-save"></i> Save Room
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Froala Editor
        let editor = new FroalaEditor("#content");

        // Upload handling
        let featureUploadElement = document.getElementById("featuredImageUpload");
        let FeaturedImageUrlElement = document.getElementById("ImagePath");
        let previewImg = document.getElementById("roomImagePreview");

        async function featureImageUpload(e) {
            let file = e.target.files[0];
            if (!file) return;

            let data = new FormData();
            data.append("file", file);

            fetch("/api/images", {
                method: "POST",
                headers: { "Accept": "*/*" },
                body: data
            })
            .then(res => res.json())
            .then(result => {
                FeaturedImageUrlElement.value = result.link;
                previewImg.src = result.link;
                previewImg.classList.remove("d-none");
            })
            .catch(err => {
                console.error("Upload error:", err);
                alert("Image upload failed. Please try again.");
            });
        }

        featureUploadElement.addEventListener("change", featureImageUpload);
    </script>
}
