@model Admission

<div class="container my-5">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">🏥 Admission Details</h3>
        </div>

        <div class="card-body p-4">
            <div class="row g-3">
                <div class="col-md-6">
                    <h6 class="text-muted">📅 Admit Date</h6>
                    <p class="fw-semibold">@Model.AdmitDate.ToString("dd MMM yyyy")</p>
                </div>

                <div class="col-md-6">
                    <h6 class="text-muted">🏁 Discharge Date</h6>
                    <p>@Model.DischargeDate?.ToString("dd MMM yyyy") ?? "N/A"</p>
                </div>

                <div class="col-md-6">
                    <h6 class="text-muted">🔬 Diagnosis</h6>
                    <p>@Model.Diagnosis</p>
                </div>

                <div class="col-md-6">
                    <h6 class="text-muted">📝 Treatment Plan</h6>
                    <p>@Model.TreatmentPlan</p>
                </div>

                <div class="col-md-6">
                    <h6 class="text-muted">💰 Advance Payment</h6>
                    <p>@Model.AdvancePayment.ToString("C")</p>
                </div>

                <div class="col-md-6">
                    <h6 class="text-muted">📌 Discharge Status</h6>
                    <p>@Model.DischargeStatus</p>
                </div>

                <div class="col-md-6">
                    <h6 class="text-muted">🩺 Doctor Remarks</h6>
                    <p>@Model.DoctorRemarks</p>
                </div>

                <div class="col-md-6">
                    <h6 class="text-muted">🕒 Created At</h6>
                    <p>@Model.CreatedAt.ToString("g")</p>
                </div>

                <div class="col-md-12">
                    <h6 class="text-muted">📄 Test Report</h6>
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <a href="@Url.Content(Model.ImagePath)" target="_blank" class="btn btn-outline-primary btn-sm">
                            View Report
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">No file uploaded</span>
                    }
                </div>

                <div class="col-md-12">
                    <h6 class="text-muted">📝 Description</h6>
                    <p>@Model.Description</p>
                </div>
            </div>

            <div class="text-end mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 me-2">
                    ✏️ Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    🔙 Back to List
                </a>
            </div>
        </div>
    </div>
</div>
