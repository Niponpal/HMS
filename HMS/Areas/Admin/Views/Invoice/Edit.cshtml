@model Invoice


<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">🧾 Edit Invoice</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="row g-4">

                    <!-- Invoice Date -->
                    <div class="col-md-6">
                        <label asp-for="InvoiceDate" class="form-label fw-semibold"></label>
                        <input asp-for="InvoiceDate" type="date" class="form-control shadow-sm" />
                        <span asp-validation-for="InvoiceDate" class="text-danger small"></span>
                    </div>

                    <!-- Consultation Fee -->
                    <div class="col-md-6">
                        <label asp-for="ConsultationFee" class="form-label fw-semibold"></label>
                        <input asp-for="ConsultationFee" type="number" step="0.01" class="form-control shadow-sm" placeholder="Enter consultation fee" />
                        <span asp-validation-for="ConsultationFee" class="text-danger small"></span>
                    </div>

                    <!-- Room Charge -->
                    <div class="col-md-6">
                        <label asp-for="RoomChrge" class="form-label fw-semibold">Room Charge</label>
                        <input asp-for="RoomChrge" type="number" step="0.01" class="form-control shadow-sm" placeholder="Enter room charges" />
                        <span asp-validation-for="RoomChrge" class="text-danger small"></span>
                    </div>

                    <!-- Medicine Charge -->
                    <div class="col-md-6">
                        <label asp-for="MedicineCharge" class="form-label fw-semibold"></label>
                        <input asp-for="MedicineCharge" type="number" step="0.01" class="form-control shadow-sm" placeholder="Enter medicine cost" />
                        <span asp-validation-for="MedicineCharge" class="text-danger small"></span>
                    </div>

                    <!-- Lab Test Charge -->
                    <div class="col-md-6">
                        <label asp-for="LabTestCharge" class="form-label fw-semibold"></label>
                        <input asp-for="LabTestCharge" type="number" step="0.01" class="form-control shadow-sm" placeholder="Enter lab test charges" />
                        <span asp-validation-for="LabTestCharge" class="text-danger small"></span>
                    </div>

                    <!-- Other Charges -->
                    <div class="col-md-6">
                        <label asp-for="OtherCharges" class="form-label fw-semibold"></label>
                        <input asp-for="OtherCharges" type="number" step="0.01" class="form-control shadow-sm" placeholder="Other charges" />
                        <span asp-validation-for="OtherCharges" class="text-danger small"></span>
                    </div>

                    <!-- Discount -->
                    <div class="col-md-6">
                        <label asp-for="Discount" class="form-label fw-semibold"></label>
                        <input asp-for="Discount" type="number" step="0.01" class="form-control shadow-sm" placeholder="Discount amount" />
                        <span asp-validation-for="Discount" class="text-danger small"></span>
                    </div>

                    <!-- Total Amount -->
                    <div class="col-md-6">
                        <label asp-for="TotalAmount" class="form-label fw-semibold"></label>
                        <input asp-for="TotalAmount" type="number" step="0.01" readonly class="form-control shadow-sm bg-light" />
                        <span asp-validation-for="TotalAmount" class="text-danger small"></span>
                    </div>

                    <!-- Payment Status -->
                    <div class="col-md-6 mt-4">
                        <label asp-for="PaymentStatus" class="form-label fw-semibold"></label>
                        <select asp-for="PaymentStatus" class="form-select shadow-sm">
                            <option value="">-- Select Payment Status --</option>
                            <option value="Paid">Paid</option>
                            <option value="Unpaid">Unpaid</option>
                            <option value="Partial">Partial</option>
                        </select>
                        <span asp-validation-for="PaymentStatus" class="text-danger small"></span>
                    </div>

                    <!-- File Upload -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Upload Invoice Image</label>
                        <input type="file" id="featuredImageUpload" class="form-control shadow-sm" accept=".jpg,.png,.pdf" />
                        <div class="mt-2">
                            <img id="invoiceImagePreview" src="" alt="Invoice Preview" class="img-thumbnail d-none" style="max-height: 150px;" />
                        </div>
                    </div>

                    <!-- Image Path -->
                    <div class="col-md-6">
                        <label asp-for="ImagePath" class="form-label fw-semibold">Image URL</label>
                        <input asp-for="ImagePath" class="form-control shadow-sm" readonly />
                        <span asp-validation-for="ImagePath" class="text-danger small"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="Description" class="form-control shadow-sm" rows="4" id="content" placeholder="Enter invoice notes..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 shadow-sm me-2">
                        <i class="bi bi-file-earmark-plus"></i> Create Invoice
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Froala Editor
        let editor = new FroalaEditor("#content");

        // File Upload Handling
        let featureUploadElement = document.getElementById("featuredImageUpload");
        let FeaturedImageUrlElement = document.getElementById("ImagePath");
        let previewImg = document.getElementById("invoiceImagePreview");

        async function featureImageUpload(e) {
            let file = e.target.files[0];
            if (!file) return;

            let data = new FormData();
            data.append("file", file);

            fetch("/api/images", {
                method: "POST",
                headers: { "Accept": "*/*" },
                body: data
            })
            .then(res => res.json())
            .then(result => {
                FeaturedImageUrlElement.value = result.link;
                previewImg.src = result.link;
                previewImg.classList.remove("d-none");
            })
            .catch(err => {
                console.error("Upload error:", err);
                alert("Image upload failed. Please try again.");
            });
        }

        featureUploadElement.addEventListener("change", featureImageUpload);

        // Auto calculate total
        const feeFields = ["ConsultationFee", "RoomChrge", "MedicineCharge", "LabTestCharge", "OtherCharges", "Discount"];
        feeFields.forEach(field => {
            document.getElementById(field).addEventListener("input", calculateTotal);
        });

        function calculateTotal() {
            let consultation = parseFloat(document.getElementById("ConsultationFee").value) || 0;
            let room = parseFloat(document.getElementById("RoomChrge").value) || 0;
            let medicine = parseFloat(document.getElementById("MedicineCharge").value) || 0;
            let lab = parseFloat(document.getElementById("LabTestCharge").value) || 0;
            let other = parseFloat(document.getElementById("OtherCharges").value) || 0;
            let discount = parseFloat(document.getElementById("Discount").value) || 0;

            let total = (consultation + room + medicine + lab + other) - discount;
            document.getElementById("TotalAmount").value = total.toFixed(2);
        }
    </script>
}
