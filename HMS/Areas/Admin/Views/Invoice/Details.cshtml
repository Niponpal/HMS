@model Invoice


<h2 class="mb-4 mx-4">Invoice Details</h2>

<div class="card shadow p-4 mx-4">
    <dl class="row">
        <dt class="col-sm-4">Invoice Date</dt>
        <dd class="col-sm-8">@Model.InvoiceDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-4">Consultation Fee</dt>
        <dd class="col-sm-8">@Model.ConsultationFee.ToString("C")</dd>

        <dt class="col-sm-4">Room Charge</dt>
        <dd class="col-sm-8">@Model.RoomChrge.ToString("C")</dd>

        <dt class="col-sm-4">Medicine Charge</dt>
        <dd class="col-sm-8">@Model.MedicineCharge.ToString("C")</dd>

        <dt class="col-sm-4">Lab Test Charge</dt>
        <dd class="col-sm-8">@Model.LabTestCharge.ToString("C")</dd>

        <dt class="col-sm-4">Other Charges</dt>
        <dd class="col-sm-8">@Model.OtherCharges.ToString("C")</dd>

        <dt class="col-sm-4">Discount</dt>
        <dd class="col-sm-8">@Model.Discount.ToString("C")</dd>

        <dt class="col-sm-4">Total Amount</dt>
        <dd class="col-sm-8">@Model.TotalAmount.ToString("C")</dd>

        <dt class="col-sm-4">Payment Status</dt>
        <dd class="col-sm-8">@Model.PaymentStatus</dd>

        <dt class="col-sm-4">Description</dt>
        <dd class="col-sm-8">@Model.Description</dd>

        <dt class="col-sm-4">Invoice Scan</dt>
        <dd class="col-sm-8">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <a href="@Url.Content(Model.ImagePath)" target="_blank">View Scan</a>
            }
            else
            {
                <span class="text-muted">No file uploaded</span>
            }
        </dd>
    </dl>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>
