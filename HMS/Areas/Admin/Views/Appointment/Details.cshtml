@model Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

@if (Model != null)
{
    <div class="container my-5">
        <div class="card shadow-lg rounded-3">
            <div class="card-header bg-primary text-white text-center py-3">
                <h3 class="mb-0">📅 Appointment Details</h3>
            </div>

            <div class="card-body p-4">
                <div class="row g-3">
                    <!-- Appointment Date & Time Slot -->
                    <div class="col-md-6">
                        <h6 class="text-muted">🗓️ Appointment Date</h6>
                        <p class="fw-semibold">@Model.AppointmentDate.ToString("yyyy-MM-dd")</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">⏰ Time Slot</h6>
                        <p>@Model.TimeSlot ?? "N/A"</p>
                    </div>

                    <!-- Status & Symptoms -->
                    <div class="col-md-6">
                        <h6 class="text-muted">📌 Status</h6>
                        <p>@Model.AppointmentStatus ?? "N/A"</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">🤒 Symptoms</h6>
                        <p>@Model.Symptoms ?? "N/A"</p>
                    </div>

                    <!-- Doctor Notes -->
                    <div class="col-md-12">
                        <h6 class="text-muted">🩺 Doctor Notes</h6>
                        <p>@Model.Notes ?? "N/A"</p>
                    </div>

                    <!-- Created At & Completed At -->
                    <div class="col-md-6">
                        <h6 class="text-muted">📌 Created At</h6>
                        <p>@Model.CreatedAt.ToString("yyyy-MM-dd hh:mm tt")</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">✅ Completed At</h6>
                        <p>
                            @(Model.CompletedAt.HasValue
                                                    ? Model.CompletedAt.Value.ToString("yyyy-MM-dd hh:mm tt")
                                                    : "Not Completed")
                    </p>
                </div>

                    <!-- Description -->
                    <div class="col-md-12">
                        <h6 class="text-muted">📝 Description</h6>
                        <p>@Model.Description ?? "N/A"</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="text-end mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 me-2">
                        ✏️ Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        🔙 Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container my-5 text-center">
        <h4 class="text-danger">Appointment details not found.</h4>
        <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
    </div>
}
