@model Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

@if (Model != null)
{
    <h2 class="mb-4 text-center">Appointment Details</h2>

    <div class="card shadow rounded-3">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Appointment Date:</strong>
                    <p>@Model.AppointmentDate.ToString("yyyy-MM-dd")</p>
                </div>
                <div class="col-md-6">
                    <strong>Time Slot:</strong>
                    <p>@Model.TimeSlot ?? "N/A"</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Status:</strong>
                    <p>@Model.AppointmentStatus ?? "N/A"</p>
                </div>
                <div class="col-md-6">
                    <strong>Symptoms:</strong>
                    <p>@Model.Symptoms ?? "N/A"</p>
                </div>
            </div>

            <div class="mb-3">
                <strong>Doctor Notes:</strong>
                <p>@Model.Notes ?? "N/A"</p>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Created At:</strong>
                    <p>@Model.CreatedAt.ToString("yyyy-MM-dd hh:mm tt")</p>
                </div>
                <div class="col-md-6">
                    <strong>Completed At:</strong>
                    <p>
                        @(Model.CompletedAt.HasValue
                                            ? Model.CompletedAt.Value.ToString("yyyy-MM-dd hh:mm tt")
                                            : "Not Completed")
                </p>
            </div>
        </div>

            <div class="mb-3">
                <strong>Description:</strong>
                <p>@Model.Description ?? "N/A"</p>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 me-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
    </div>
}
else
{
    <h4 class="text-danger text-center">Appointment details not found.</h4>
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
}
