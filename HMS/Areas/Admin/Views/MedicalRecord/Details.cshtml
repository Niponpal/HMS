@model MedicalRecord

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">📋 Medical Record Details</h3>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">

                <!-- Record Date & Created At -->
                <div class="col-md-6">
                    <h6 class="text-muted">📅 Record Date</h6>
                    <p class="fw-semibold">@Model.RecordDate.ToShortDateString()</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">⏰ Created At</h6>
                    <p class="fw-semibold">@Model.CreatedAt.ToString("g")</p>
                </div>

                <!-- Symptoms & Diagnosis -->
                <div class="col-md-6">
                    <h6 class="text-muted">🤒 Symptoms</h6>
                    <p>@Model.Symptoms</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">🩺 Diagnosis</h6>
                    <p>@Model.Diagnosis</p>
                </div>

                <!-- Prescription & Notes -->
                <div class="col-md-6">
                    <h6 class="text-muted">💊 Prescription</h6>
                    <p>@Model.Prescription</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">📝 Notes</h6>
                    <p>@Model.Notes</p>
                </div>

                <!-- Test Results & Next Visit -->
                <div class="col-md-6">
                    <h6 class="text-muted">🔬 Test Results</h6>
                    <p>@Model.TestResults</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">📌 Next Visit Suggestion</h6>
                    <p>@Model.NextVisitSuggestion</p>
                </div>

                <!-- Description -->
                <div class="col-md-12">
                    <h6 class="text-muted">📖 Description</h6>
                    <p>@Model.Description</p>
                </div>

                <!-- Image -->
                <div class="col-md-12">
                    <h6 class="text-muted">🖼️ Medical Image</h6>
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" alt="Medical Record Image" class="img-fluid rounded shadow-sm mt-2" style="max-width: 300px;" />
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No image available.</p>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="text-end mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 shadow-sm">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2 shadow-sm">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
