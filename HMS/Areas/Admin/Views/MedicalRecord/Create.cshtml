@model MedicalRecord

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">🩺 Create Medical Record</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="row g-4">

                    <!-- Record Date -->
                    <div class="col-md-6">
                        <label asp-for="RecordDate" class="form-label fw-semibold">Record Date</label>
                        <input asp-for="RecordDate" class="form-control shadow-sm" type="date" />
                        <span asp-validation-for="RecordDate" class="text-danger small"></span>
                    </div>

                    <!-- Symptoms -->
                    <div class="col-md-6">
                        <label asp-for="Symptoms" class="form-label fw-semibold">Symptoms</label>
                        <input asp-for="Symptoms" class="form-control shadow-sm" placeholder="Enter patient symptoms" />
                        <span asp-validation-for="Symptoms" class="text-danger small"></span>
                    </div>

                    <!-- Diagnosis -->
                    <div class="col-md-6">
                        <label asp-for="Diagnosis" class="form-label fw-semibold">Diagnosis</label>
                        <input asp-for="Diagnosis" class="form-control shadow-sm" placeholder="Enter diagnosis" />
                        <span asp-validation-for="Diagnosis" class="text-danger small"></span>
                    </div>

                    <!-- Prescription -->
                    <div class="col-md-6">
                        <label asp-for="Prescription" class="form-label fw-semibold">Prescription</label>
                        <input asp-for="Prescription" class="form-control shadow-sm" placeholder="Enter prescribed medicines" />
                        <span asp-validation-for="Prescription" class="text-danger small"></span>
                    </div>

                    <!-- Notes -->
                    <div class="col-md-6">
                        <label asp-for="Notes" class="form-label fw-semibold">Notes</label>
                        <input asp-for="Notes" class="form-control shadow-sm" placeholder="Additional notes" />
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>

                    <!-- Patient Selection -->
                    <div class="col-md-6 mt-4">
                        <label asp-for="PatientId" class="form-label fw-semibold">Select Patient</label>
                        <select asp-for="PatientId" class="form-select shadow-sm" asp-items="@(ViewBag.PatientId)">
                            <option value="">-- Select Patient --</option>
                        </select>
                        <span asp-validation-for="PatientId" class="text-danger small"></span>
                    </div>

                    <!-- Test Results -->
                    <div class="col-md-6">
                        <label asp-for="TestResults" class="form-label fw-semibold">Test Results</label>
                        <input asp-for="TestResults" class="form-control shadow-sm" placeholder="Enter test results" />
                        <span asp-validation-for="TestResults" class="text-danger small"></span>
                    </div>

                    <!-- Next Visit -->
                    <div class="col-md-6">
                        <label asp-for="NextVisitSuggestion" class="form-label fw-semibold">Next Visit Suggestion</label>
                        <input asp-for="NextVisitSuggestion" class="form-control shadow-sm" placeholder="Enter suggestion" />
                        <span asp-validation-for="NextVisitSuggestion" class="text-danger small"></span>
                    </div>

                    <!-- Created At -->
                    <div class="col-md-6">
                        <label asp-for="CreatedAt" class="form-label fw-semibold">Created At</label>
                        <input asp-for="CreatedAt" class="form-control shadow-sm" type="datetime-local" />
                        <span asp-validation-for="CreatedAt" class="text-danger small"></span>
                    </div>

                    <!-- File Upload -->
                    <div class="col-md-6">
                        <label for="featuredImageUpload" class="form-label fw-semibold">Upload Medical Image</label>
                        <input class="form-control shadow-sm" type="file" id="featuredImageUpload" accept=".jpg,.png,.jpeg" />
                        <div class="mt-2">
                            <img id="previewImage" src="" alt="Preview" class="img-thumbnail d-none" style="max-height: 150px;" />
                        </div>
                    </div>

                    <!-- Image Path -->
                    <div class="col-md-6">
                        <label asp-for="ImagePath" class="form-label fw-semibold">Image Path</label>
                        <input asp-for="ImagePath" class="form-control shadow-sm" id="ImagePath" readonly />
                        <span asp-validation-for="ImagePath" class="text-danger small"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label fw-semibold">Description</label>
                        <textarea asp-for="Description" class="form-control shadow-sm" rows="4" id="content" placeholder="Enter detailed description"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 shadow-sm me-2">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Froala Editor
        let editor = new FroalaEditor("#content");

        // File Upload & Preview
        const featureUploadElement = document.getElementById("featuredImageUpload");
        const imagePathElement = document.getElementById("ImagePath");
        const previewImg = document.getElementById("previewImage");

        async function featureImageUpload(e) {
            const file = e.target.files[0];
            if (!file) return;

            const formData = new FormData();
            formData.append("file", file);

            try {
                const response = await fetch("/api/images", {
                    method: "POST",
                    headers: { "Accept": "*/*" },
                    body: formData
                });

                const result = await response.json();
                if (result.link) {
                    imagePathElement.value = result.link;
                    previewImg.src = result.link;
                    previewImg.classList.remove("d-none");
                } else {
                    alert("Image upload failed. No link returned.");
                }
            } catch (err) {
                console.error("Upload error:", err);
                alert("Image upload failed. Please try again.");
            }
        }

        featureUploadElement.addEventListener("change", featureImageUpload);
    </script>
}
