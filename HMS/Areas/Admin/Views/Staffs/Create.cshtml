@model Staff

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">👨‍💼 Add New Staff</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="row g-4">

                    <!-- Full Name -->
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label fw-semibold">Full Name</label>
                        <input asp-for="FullName" class="form-control shadow-sm" placeholder="Enter full name" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <!-- Role -->
                    <div class="col-md-6">
                        <label asp-for="Role" class="form-label fw-semibold">Role</label>
                        <input asp-for="Role" class="form-control shadow-sm" placeholder="e.g., Nurse, Receptionist" />
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>

                    <!-- Phone Number -->
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control shadow-sm" placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold">Email</label>
                        <input asp-for="Email" class="form-control shadow-sm" placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Joining Date -->
                    <div class="col-md-6">
                        <label asp-for="JoiningDate" class="form-label fw-semibold">Joining Date</label>
                        <input asp-for="JoiningDate" type="date" class="form-control shadow-sm" />
                        <span asp-validation-for="JoiningDate" class="text-danger small"></span>
                    </div>

                    <!-- Shift -->
                    <div class="col-md-6 mt-4">
                        <label asp-for="Shift" class="form-label fw-semibold">Shift</label>
                        <select asp-for="Shift" class="form-select shadow-sm">
                            <option value="">-- Select Shift --</option>
                            <option>Morning</option>
                            <option>Evening</option>
                            <option>Night</option>
                        </select>
                        <span asp-validation-for="Shift" class="text-danger small"></span>
                    </div>

                    <!-- Gender -->
                    <div class="col-md-6 mt-4 mb-4">
                        <label asp-for="Gender" class="form-label fw-semibold">Gender</label>
                        <select asp-for="Gender" class="form-select shadow-sm">
                            <option value="">-- Select Gender --</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger small"></span>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6 mt-4">
                        <label asp-for="Status" class="form-label fw-semibold">Status</label>
                        <select asp-for="Status" class="form-select shadow-sm">
                            <option value="">-- Select Status --</option>
                            <option>Active</option>
                            <option>Inactive</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <!-- Image Upload -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Upload Photo</label>
                        <input type="file" class="form-control shadow-sm" id="featuredImageUpload" accept=".jpg,.jpeg,.png" />
                        <div class="mt-2">
                            <img id="previewImage" src="" alt="Preview" class="img-thumbnail d-none" style="max-height: 150px;" />
                        </div>
                    </div>

                    <!-- Image Path -->
                    <div class="col-md-6">
                        <label asp-for="ImagePath" class="form-label fw-semibold">Image URL</label>
                        <input asp-for="ImagePath" class="form-control shadow-sm" id="ImagePath" readonly />
                        <span asp-validation-for="ImagePath" class="text-danger small"></span>
                    </div>

                    <!-- Address -->
                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label fw-semibold">Address</label>
                        <textarea asp-for="Address" class="form-control shadow-sm" rows="3" placeholder="Enter address"></textarea>
                    </div>

                    <!-- Description -->
                    <div class="col-md-6">
                        <label asp-for="Description" class="form-label fw-semibold">Description / Notes</label>
                        <textarea asp-for="Description" class="form-control shadow-sm" rows="3" id="content" placeholder="Additional notes"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-12 text-center mt-4">
                        <button type="submit" class="btn btn-success px-4 shadow-sm me-2">
                            <i class="bi bi-save"></i> Save
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script>
         let editor = new FroalaEditor("#content");
        const featureUploadElement = document.getElementById("featuredImageUpload");
        const imagePathElement = document.getElementById("ImagePath");

        async function featureImageUpload(e) {
            const file = e.target.files[0];
            if (!file) return;

            const formData = new FormData();
            formData.append("file", file);

            try {
                const response = await fetch("/api/images", {
                    method: "POST",
                    headers: {
                        "Accept": "*/*"
                    },
                    body: formData
                });

                const result = await response.json();
                if (result.link) {
                    imagePathElement.value = result.link;
                } else {
                    alert("Image upload failed. No link returned.");
                }
            } catch (err) {
                console.error("Upload error:", err);
                alert("Image upload failed. Please try again.");
            }
        }

        featureUploadElement.addEventListener("change", featureImageUpload);
    </script>
}
