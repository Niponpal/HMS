@model List<Staff>

<div class="card">
    <div class="card-header">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Staffs
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Photo</th>
                    <th>Full Name</th>
                    <th>Role</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Joining Date</th>
                    <th>Shift</th>
                    <th>Status</th>
                    <th>Images Url</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var staff in Model)
                {
                    <tr>
                        <td>@staff.Id</td>
                        <td>
                            <img src="@Url.Content(staff.ImagePath)" alt="Photo" width="60" height="60" class="rounded" />
                        </td>
                        <td>@staff.FullName</td>
                        <td>@staff.Role</td>
                        <td>@staff.PhoneNumber</td>
                        <td>@staff.Email</td>
                        <td>@staff.JoiningDate.ToString("yyyy-MM-dd")</td>
                        <td>@staff.Shift</td>
                        <td>@staff.Status</td>
                        <td>@staff.ImagePath</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@staff.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@staff.Id" class="btn btn-warning btn-sm">Edit</a>
                            <form asp-action="Delete" asp-route-id="@staff.Id" method="post" onclick="return confirm('Are You Srue Delete data')">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Rendering engine</th>
                    <th>Browser</th>
                    <th>Platform(s)</th>
                    <th>Engine version</th>
                    <th>CSS grade</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>



@section Scripts {
    <script>
        $(function () {
          $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
          }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
          $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
          });
        });
    </script>
}


