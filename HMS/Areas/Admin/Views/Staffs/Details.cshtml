@model Staff


<div class="container mt-5 mx-4">
    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@Url.Content(Model.ImagePath ?? "~/images/default.png")"
                     alt="Staff Photo"
                     class="img-thumbnail shadow"
                     style="max-height: 250px;" />
            </div>
            <div class="col-md-8">
                <h3 class="mb-4">@Model.FullName</h3>
                <table class="table table-bordered">
                    <tr>
                        <th>Role</th>
                        <td>@Model.Role</td>
                    </tr>
                    <tr>
                        <th>Phone Number</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Joining Date</th>
                        <td>@Model.JoiningDate.ToString("yyyy-MM-dd")</td>
                    </tr>
                    <tr>
                        <th>Shift</th>
                        <td>@Model.Shift</td>
                    </tr>
                    <tr>
                        <th>Gender</th>
                        <td>@Model.Gender</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>@Model.Status</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>@Model.Description</td>
                    </tr>
                </table>

                <div class="mt-3 text-end">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
