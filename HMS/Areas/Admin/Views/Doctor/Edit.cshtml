@model Doctor


<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">➕ Doctor Modifiyer</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div class="row g-4">

                    <!-- Full Name -->
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label fw-semibold"></label>
                        <input asp-for="FullName" class="form-control shadow-sm" placeholder="Enter doctor's full name" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <!-- Specialization -->
                    <div class="col-md-6">
                        <label asp-for="Specialization" class="form-label fw-semibold"></label>
                        <input asp-for="Specialization" class="form-control shadow-sm" placeholder="e.g. Cardiologist" />
                        <span asp-validation-for="Specialization" class="text-danger small"></span>
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                        <input asp-for="PhoneNumber" class="form-control shadow-sm" placeholder="+8801XXXXXXXXX" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control shadow-sm" placeholder="doctor@email.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Qualification -->
                    <div class="col-md-6">
                        <label asp-for="Qualification" class="form-label fw-semibold"></label>
                        <input asp-for="Qualification" class="form-control shadow-sm" placeholder="e.g. MBBS, FCPS" />
                        <span asp-validation-for="Qualification" class="text-danger small"></span>
                    </div>

                    <!-- Experience -->
                    <div class="col-md-6">
                        <label asp-for="ExperienceYears" class="form-label fw-semibold"></label>
                        <input asp-for="ExperienceYears" type="number" min="0" class="form-control shadow-sm" placeholder="Years of experience" />
                        <span asp-validation-for="ExperienceYears" class="text-danger small"></span>
                    </div>

                    <!-- Gender -->
                    <div class="col-md-6 mt-5">
                        <label asp-for="Gender" class="form-label fw-semibold"></label>
                        <select asp-for="Gender" class="form-select shadow-sm">
                            <option value="">-- Select Gender --</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger small"></span>
                    </div>

                    <!-- Joining Date -->
                    <div class="col-md-6">
                        <label asp-for="JoiningDate" class="form-label fw-semibold"></label>
                        <input asp-for="JoiningDate" type="date" class="form-control shadow-sm" />
                        <span asp-validation-for="JoiningDate" class="text-danger small"></span>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6 mt-5">
                        <label asp-for="Status" class="form-label fw-semibold"></label>
                        <select asp-for="Status" class="form-select shadow-sm">
                            <option value="">-- Select Status --</option>
                            <option>Active</option>
                            <option>Inactive</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <!-- Feature Image Upload -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Upload Profile Image</label>
                        <input type="file" class="form-control shadow-sm" id="featuredImageUpload" />
                    </div>

                    <!-- Hidden Image Path -->
                    <div class="col-md-12">
                        <label asp-for="ImagePath" class="form-label fw-semibold"></label>
                        <input asp-for="ImagePath" class="form-control shadow-sm" type="text" readonly />
                        <span asp-validation-for="ImagePath" class="text-danger small"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="Description" class="form-control shadow-sm" rows="4" id="content" placeholder="Brief introduction about the doctor"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 me-2 shadow-sm">
                        <i class="bi bi-save"></i> Save Doctor
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Rich text editor for description
        let editor = new FroalaEditor("#content");

        // Image upload handling
        let featureUploadElement = document.getElementById("featuredImageUpload");
        let FeaturedImageUrlElement = document.getElementById("ImagePath");

        async function featureImageUpload(e) {
            let file = e.target.files[0];
            if (!file) return;

            let data = new FormData();
            data.append("file", file);

            fetch("/api/images", {
                method: "POST",
                headers: { "Accept": "*/*" },
                body: data
            })
            .then(res => res.json())
            .then(result => {
                FeaturedImageUrlElement.value = result.link;
            })
            .catch(err => {
                console.error("Upload error:", err);
                alert("Image upload failed. Please try again.");
            });
        }

        featureUploadElement.addEventListener("change", featureImageUpload);
    </script>
}
